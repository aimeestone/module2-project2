<div id="secondary-nav">
  <img src="{{ user.avatar }}" class="user-avatar">
  <h1 class="user-profile-title">Hi {{ user.name }},<br>nice to have you back!</h1>
  {{!-- mettre un effet hover sur l'avatar avec un lien "change my profile picture" --}}
</div>

<div class="user-info">
  <h2 class="">Edit your profile <img src="/images/edit.png" class="edit-icon"></h2>

  {{#if msg}}
  <span>{{msg}}</span>
  {{/if}}

  <form method="post" action="/profile" id="user_test"></form>
  <table class="info-manage-table greenTable">
    <thead>
      <tr class="table-row">
        <th class="table-head">Your info</th>
        <th class="table-head">Edit your personal info</th>
      </tr>
      <tr>
        <td>
          <label for="name">Your name</label>
        </td>
        <td>
          <input id="name" type="name" name="name" required placeholder="{{ user.name }}" value="{{ user.name }}">
        </td>
      </tr>
      <tr>
        <td>
          <label for="email">Your email</label>
        </td>
        <td>
          <input id="email" type="email" name="email" required placeholder="{{ user.email }}" value="{{ user.email }}">
        </td>
      </tr>
      <tr>
        <td>
          <label for="password">Choose a new password</label>
        </td>
        <td>
          <input id="password" type="password" placeholder="••••••" required value="{{user.password}}" name="password">
        </td>
      </tr>
      <tr>
        <td>
          <label for="avatar">Edit your profile picture</label>
        </td>
        <td>
          <input id="avatar" type="file" name="avatar">
        </td>
      </tr>
      <tr>
        <td>Delete my account</td>
        <td>
          <button>Are you sure?</button>
        </td>
      </tr>
    </thead>

    <tbody>
      {{#each users}}
      <tr class="table-row">
        {{ user.name }}
      </tr>
      <tr>
        {{ user.email }}
      </tr>
      <tr>
        {{ user.password }}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<button>Save my changes</button>
</form>


